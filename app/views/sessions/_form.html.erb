<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :username %>
    <%= text_field_tag :username, params[:username] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password, params[:password] %>
  </div>
  <div class="form-actions text-center">
    <%= button_tag "Log in", class: 'btn btn-primary' %> 
    <%= button_tag 'Login with Facebook', class: 'btn btn-primary', id: 'sign_in' %>
    <%= link_to 'Sign Up', new_user_path, class: 'btn btn-primary', id: 'sign_up' %>
  </div>
<% end %>
